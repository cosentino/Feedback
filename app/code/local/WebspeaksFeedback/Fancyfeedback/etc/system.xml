<?xml version="1.0" ?>
<config>
    <tabs>
        <fancyfeedback_tab module="fancyfeedback" translate="label">
            <label>Fancy Feedback</label>
            <sort_order>100</sort_order>
        </fancyfeedback_tab>
    </tabs>
    <sections>
        <fancyfeedbackconfig module="fancyfeedback" translate="label">
            <label>Configuration</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>fancyfeedback_tab</tab>
            <groups>
                <fancyfeedback_group translate="label">
                    <label>Fancy Feedback Configuration</label>
                    <!--<comment>Show/Hide Fancy feedback on your site</comment>-->
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <fancyfeedback_enabled translate="label tooltip comment">
                            <label>Is Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Display Fancy feedback form in front office.</comment>
                        </fancyfeedback_enabled>
                        <fancyfeedback_senderemail translate="label tooltip comment">
                            <label>Sender Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Email address used to reply feedbacks.</comment>
                        </fancyfeedback_senderemail>
                        <fancyfeedback_sendername translate="label tooltip comment">
                            <label>Sender Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Name used to reply feedbacks.</comment>
                        </fancyfeedback_sendername>
                        <fancyfeedback_receiveremail translate="label tooltip comment">
                            <label>Receiver Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Email on which feedbacks are received.</comment>
                        </fancyfeedback_receiveremail>
                        <fancyfeedback_subject translate="label tooltip comment">
                            <label>Default Subject</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Subject line of received feedback mails.</comment>
                        </fancyfeedback_subject>
                        <fancyfeedback_email_template_new translate="label">
                            <label>New Feedback Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fancyfeedback_email_template_new>
                        <fancyfeedback_email_template_reply translate="label">
                            <label>Feedback Reply Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fancyfeedback_email_template_reply>
                    </fields>
                </fancyfeedback_group>

                <fancyfeedback_design translate="label">
                    <label>Design</label>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <fancyfeedback_top translate="label tooltip comment">
                            <label>Distance from top</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Distance (in pixels) of the Feedback box from top of the page</comment>
                        </fancyfeedback_top>
                        <fancyfeedback_bgcolor translate="label tooltip comment">
                            <label>Background color</label>
                            <frontend_type>text</frontend_type>
							<validate>color</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Background color of the Feedback box</comment>
                        </fancyfeedback_bgcolor>
                        <fancyfeedback_txtcolor translate="label tooltip comment">
                            <label>Text color</label>
                            <frontend_type>text</frontend_type>
							<validate>color</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Text color of the Feedback box</comment>
                        </fancyfeedback_txtcolor>
                        <fancyfeedback_inputbg translate="label tooltip comment">
                            <label>Input Textbox background color</label>
                            <frontend_type>text</frontend_type>
							<validate>color</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Background color of the input text boxes</comment>
                        </fancyfeedback_inputbg>
                    </fields>
                </fancyfeedback_design>
			</groups>
        </fancyfeedbackconfig>
    </sections>
</config>